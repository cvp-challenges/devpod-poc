{
  "name": "Full Stack Dev Environment",
  "dockerComposeFile": "docker-compose.yml",
  "service": "workspace",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "git.detectSubmodules": false,
        "git.autoRepositoryDetection": true,
        "git.scanRepositories": ["/workspace"]
      },
      "extensions": [
        "vscjava.vscode-java-pack",
        "msjsdiag.vscode-react-native",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "forwardPorts": [3000, 8089],
  "remoteUser": "vscode",
  "postCreateCommand": "sed -i -e 's/\r$//' /workspace/.devcontainer/scripts/init.sh && /workspace/.devcontainer/scripts/init.sh",
  "containerEnv": {
    "GIT_EDITOR": "code --wait",
    "HOST_GIT_USER_NAME": "${localEnv:GIT_AUTHOR_NAME:${localEnv:USER}}",
    "HOST_GIT_USER_EMAIL": "${localEnv:GIT_AUTHOR_EMAIL:${localEnv:EMAIL}}"
  }
}
