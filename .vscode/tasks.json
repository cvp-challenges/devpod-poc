{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Yarn Install",
      "type": "shell",
      "command": "/workspace/scripts/yarn-install.sh",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Springboot Build",
      "type": "shell",
      "command": "/workspace/scripts/springboot-build.sh",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "NextJS UI",
      "type": "shell",
      "command": "cd frontend && yarn dev", // add "--inspect=0.0.0.0:9229" if using debugger
      "problemMatcher": [],
      "dependsOn": "Yarn Install",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Springboot API",
      "type": "shell",
      "command": "cd backend && mvn spring-boot:run -Dmaven.test.skip=true",
      "problemMatcher": [],
      "dependsOn": "Springboot Build",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated",
        "showReuseMessage": false,
        "clear": false
      }
    },
    {
      "label": "Start All",
      "dependsOn": ["Springboot API", "NextJS UI"],
      "dependsOrder": "parallel"
    },
    {
      "label": "Build All",
      "dependsOn": ["Yarn Install", "Springboot Build"],
      "dependsOrder": "parallel",
      "problemMatcher": [],
    },
    {
      "label": "Start Services",
      "dependsOn": ["Build All", "Start All"],
      "dependsOrder": "sequence",
      "problemMatcher": [],
      "runOptions": {
        "runOn": "folderOpen"
      }
    }
  ]
}
